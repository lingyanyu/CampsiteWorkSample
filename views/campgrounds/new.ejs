<%- include("../partials/header")%>

<div class="container">
	<div class="row d-block">
		<h1 style="text-align: center"> Create a new campground</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="name here">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="price" placeholder="price here" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control"type="text" name="image" placeholder="image url here">
				</div>
				<div class="form-group">
					<input class="form-control"type="text" name="description" placeholder="description">
				</div>
				<div class="form-group">
					<input class="btn btn-primary" type="submit">
				</div>
			</form>
			<a href="/campgrounds"> go back</a>
	    </div>
	</div>
</div>

<%- include("../partials/footer")%>