<%- include("../partials/header")%>

<div class="container">
	<div class="row d-block">
		<h1 style="text-align: center"> Edit <%=campground.name%> campground</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="camp[name]" value="<%=campground.name%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="camp[price]" value="<%=campground.price%>" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control"type="text" name="camp[image]" value="<%=campground.image%>">
				</div>
				<div class="form-group">
					<input class="form-control"type="text" name="camp[description]" value="<%=campground.description%>">
				</div>
				<div class="form-group">
					<input class="btn btn-primary" type="submit">
				</div>
			</form>
			<a href="/campgrounds"> go back</a>
	    </div>
	</div>
</div>

<%- include("../partials/footer")%>